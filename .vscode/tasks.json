{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TELOS: Clean Build",
            "type": "shell",
            "command": "cd /mnt/c/EntropicGarden && rm -rf build/ && mkdir -p build && cd build && cmake .. -DCMAKE_BUILD_TYPE=RelWithDebInfo && make -j$(nproc)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "shell": {
                    "executable": "wsl.exe"
                }
            }
        },
